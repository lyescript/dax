#!/bin/sh

dir="$(pwd)"
bin="$0"
while [ -L "${bin}" ]
do
    x="$(readlink "${bin}")"
    cd "$(dirname "${bin}")"
    bin="${x}"
done
cd "$(dirname "${bin}")" || exit 1
cd .. || exit 1
home="$(pwd)"
cd "${dir}"

if [ ! -z "${DAX_HOST}" ]
then
    host="${DAX_HOST}"
elif node -v > /dev/null 2>&1
then
    host=node
else
    echo no host found
fi
code=index.js

exec ${host} "${home}/${code}" "$@"
