#!/bin/sh

dir="$(pwd)"
bin="$0"
while [ -L "${bin}" ]
do
    x="$(readlink "${bin}")"
    cd "$(dirname "${bin}")"
    bin="${x}"
done
cd "$(dirname "${bin}")"
home="$(pwd)"
npm="$(which npm)"
if [ ! -z "${npm}" ]
then
    cd "$(dirname "${npm}")"/../lib
    npm="$(pwd)/node_modules"
fi
cd "${dir}"

if [ ! -z "${LUMEN_HOST}" ]
then
    host="${LUMEN_HOST}"
elif luajit -v > /dev/null 2>&1
then
    host=luajit
elif lua -v > /dev/null 2>&1
then
    host=lua
elif node -v > /dev/null 2>&1
then
    host=node
else
    echo no host found
fi

case $host in
    node*)
        code=lumen.js
        export NODE_PATH="$NODE_PATH:${home}:${dir}/lib:${npm}";;
    *)
        code=lumen.lua
        export LUA_PATH="$LUA_PATH;${home}/?.lua;${dir}/lib/?.lua;${npm}/?/init.lua;${npm}/?/?.lua;${npm}/?.lua;;";;
esac

exec ${host} "${home}/${code}" "$@"
